{
	"name": "city-scavenger",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"build": "vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:generate": "kysely-codegen --out-file ./src/lib/generated/db.d.ts",
		"dev": "vite dev",
		"postinstall": "bun2nix -o bun.nix; echo '' >> bun.nix",
		"prepare": "svelte-kit sync || echo ''",
		"preview": "vite preview"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.1",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.48.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.16",
		"@types/node": "^24",
		"eslint": "^9.39.1",
		"eslint-plugin-svelte": "^3.13.0",
		"globals": "^16.5.0",
		"kysely-codegen": "^0.19.0",
		"svelte": "^5.43.3",
		"svelte-adapter-bun": "^1.0.1",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.16",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.3",
		"vite": "^7.2.0"
	},
	"dependencies": {
		"@types/bun": "^1.3.2",
		"@types/pg": "^8.15.6",
		"kysely": "^0.28.8",
		"pg": "^8.16.3"
	}
